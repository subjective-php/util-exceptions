{
    "name": "subjective-php/util-exceptions",
    "description": "Collection of exception utilities",
    "keywords": ["exception", "util"],
    "license": "MIT",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=6.0",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload": {
        "psr-4": { "SubjectivePHP\\Util\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "SubjectivePHPTest\\Util\\": "tests/" }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs",
        "test": "vendor/bin/phpunit"
    }
}
